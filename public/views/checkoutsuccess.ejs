</head>

<body id="bd">

    <div id="loader" class="loading-container">
        <img src="img/FOR_HUMANS__2_.png" alt="Loading" class="loader-image">
    </div>

    <div class="content">
        <i class="fas fa-sun"></i>
        &nbsp;&nbsp;&nbsp;
        <input type="checkbox" id="tooglenight" class="cbx hidden" />
        <label for="tooglenight" class="switch"></label>
        &nbsp;&nbsp;&nbsp;
        <i class="fas fa-moon"></i>
    </div>

    <%- include('./partials/header') %>


    <main class="d-flex justify-content-center success-box">


        <div class="text-center my-5 align-self-center">
            <img src="img/shopping-basket.png" alt="checkout-success" class="success-img img-fluid">
            <div class="mb-4">
                <h2 class="heading-secondary mt-5">Your payment was successful!</h2>
                <p>Order #72712</p>
                <p>You will receive an email confirmation.</p>
            </div>

            <a href="index.html" class="btn btn-send">Continue shopping</a>
            
        </div>


    </main>

    <%- include('./partials/footer') %>





    <script src="js/script.js"></script>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>


    <!-- DARK MODE -->
    <script>
        $(document).ready(function () {
            $("#tooglenight").change(function () {
                if (this.checked) {
                    $("#bd").addClass("night");
                    $(".content i").css("color", "#333");
                } else {
                    $("#bd").removeClass("night");
                    $(".content i").css("color", "white");
                }
            });
        });
    </script>

</body>

</html>