        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="/css/bootstrap.min.css">


    <link rel="stylesheet" href="/css/style.css">

</head>

<body id="bd">

    <!-- <div id="loader" class="loading-container">
        <img src="img/FOR_HUMANS__2_.png" alt="Loading" class="loader-image">
    </div> -->

    <div class="content">
        <i class="fas fa-sun"></i>
        &nbsp;&nbsp;&nbsp;
        <input type="checkbox" id="tooglenight" class="cbx hidden" />
        <label for="tooglenight" class="switch"></label>
        &nbsp;&nbsp;&nbsp;
        <i class="fas fa-moon"></i>
    </div>

    <%- include('./partials/header') %>


        <main>
            <div>



                <div>

                    <section class="content-wrapper">

                        <div class="add-product busi active">
                            <div class="heading-business mb-4">edit orders</div>
                            <div class="add-product-box">

                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="product-left">
                                            <div class="form-group mb-4">
                                                <span class="form-label" id="orderId">orderId</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="trackingNumber">tracking number</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="userId">userId</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="userName">username</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="city">city</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="state">state</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="address">address</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="country">country</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="email">email</span>
                                            </div>
                                            <div class="mb-3">
                                                <span class="form-label" id="phone">phone</span>
                                            </div>

                                        </div>

                                    </div>

                                    <div class="col-md-4">
                                        <div class="product-right">
                                            <form id="editOrderForm">

                                                <div class="">
                                                    <div class="order-summary">
                                                        <div class="mb-3">
                                                            <p class="order-heading">
                                                                Order Summary</p>
                                                        </div>

                                                        <div id="productList">
                                                            <!-- <span>2 products</span>
                                                            <span>$500</span> -->
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <span class="form-label" id="price">price</span>
                                                </div>
                                                <div class="organisation">

                                                    <div class="mb-3">
                                                        <label for="orderStatus" class="form-label">order status</label>
                                                        <select name="orderStatus" id="orderStatus"
                                                            class="form-control">
                                                            <option value="0">processed</option>
                                                            <option value="1">delivered</option>
                                                            <option value="2">shipped</option>
                                                            <option value="3">canceled</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="btns">
                                                    <button type="submit" class="btn btn-save">Save</button>
                                                    <button type="submit" class="btn btn-delete">Delete</button>

                                                </div>

                                            </form>

                                        </div>


                                    </div>

                                </div>
                            </div>

                        </div>

                    </section>


                </div>

            </div>
        </main>




        <%- include('./partials/footer') %>




            <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/min/tiny-slider.js"></script>

            <script src="/js/bootstrap.bundle.min.js"></script>

            <script src="/js/script.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

            <!-- <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script> -->

            <script src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>


            <script>
                $(document).ready(function () {
                    $("#tooglenight").change(function () {
                        if (this.checked) {
                            $("#bd").addClass("night");
                            $(".content i").css("color", "#333");
                        } else {
                            $("#bd").removeClass("night");
                            $(".content i").css("color", "white");
                        }
                    });
                });
            </script>

            <script>
                window.APP_API_BACKEND_URL = "<%= apiUrl %>";
            </script>

            <script src="/client/admin/editOrder.js"></script>


</body>

</html>