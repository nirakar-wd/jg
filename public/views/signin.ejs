<body id="bd">

    <!-- <div id="loader" class="loading-container">
        <img src="img/FOR_HUMANS__2_.png" alt="Loading" class="loader-image">
    </div> -->

    <div class="content">
        <i class="fas fa-sun"></i>
        &nbsp;&nbsp;&nbsp;
        <input type="checkbox" id="tooglenight" class="cbx hidden" />
        <label for="tooglenight" class="switch"></label>
        &nbsp;&nbsp;&nbsp;
        <i class="fas fa-moon"></i>
    </div>

    <%- include('./partials/header') %>

    <main>

        <div class="container">
            <div class="login">
                <div class="container">
                    <h2 class="heading-secondary">Login</h2>

                    <div class="login-form-grids">
                        <form id="loginForm">
                            <input type="hidden" name="">

                            <input type="text" class="form-control" placeholder="Username" name="username" value="" required
                                autofocus />


                            <input type="password" class="form-control" placeholder="Password" name="password"
                                required />

                            <div class="forgot">
                                <a href="#" data-dismiss="modal" data-toggle="modal"
                                    data-target="#ForgetPasswordformModal">Forgot Password?</a>
                            </div>
                            <!-- <div class="CBox">
                        <label>
                          <input type="checkbox" name="remember" >
                          Remember me
                        </label>
                      </div> -->
                            <input type="submit" value="Login">
                            <p> </p>
                        </form>
                    </div>
                    <!-- <h4 class="">For New People</h4> -->
                    <p class="login-para">
                        Dont have an account?
                        <a href="register.html"> Register Here</a>
                    </p>
                </div>
            </div>
        </div>



    </main>

    <%- include('./partials/footer') %>



</body>

<script src="/js/script.js"></script>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"
