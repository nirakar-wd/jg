    <script>
        document.querySelectorAll('aside a')
            .forEach(e => e.addEventListener('click', _ => change(e.dataset.id)))


        function change(n) {
            let panels = document.querySelectorAll('.busi')
            panels.forEach(p => p.classList.remove('active'))
            panels[n - 1].classList.add('active')
        }


        $('.seller-nav div').click(function () {
            $(this).siblings('div').removeClass("active"); // remove active class from sibling anchors
            $(this).toggleClass("active");
        })

    </script>

    <script>
        $(document).ready(function () {
            $("#tooglenight").change(function () {
                if (this.checked) {
                    $("#bd").addClass("night");
                    $(".content i").css("color", "#333");
                } else {
                    $("#bd").removeClass("night");
                    $(".content i").css("color", "white");
                }
            });
        });
