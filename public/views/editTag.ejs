<body id="bd">

    <!-- <div id="loader" class="loading-container">
        <img src="img/FOR_HUMANS__2_.png" alt="Loading" class="loader-image">
    </div> -->

    <div class="content">
        <i class="fas fa-sun"></i>
        &nbsp;&nbsp;&nbsp;
        <input type="checkbox" id="tooglenight" class="cbx hidden" />
        <label for="tooglenight" class="switch"></label>
        &nbsp;&nbsp;&nbsp;
        <i class="fas fa-moon"></i>
    </div>

    <%- include('./partials/header') %>


        <main>
            <div>



                <div>

                    <section class="content-wrapper">

                        <div class="add-product add-category busi active">
                            <div class="heading-business mb-4">edit tag</div>
                            <div class="add-product-box">
                                <form id="tagsForm">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="product-left">
                                                <div class="form-group mb-4">
                                                    <label for="product-name" class="form-label">name</label>
                                                    <input type="text" class="form-control" id="tagName">
                                                </div>

                                                <div class="mb-3">
                                                    <label for="productDescription" class="form-label">full
                                                        description</label>
                                                    <textarea class="form-control" id="tagDescription"
                                                        rows="5"></textarea>
                                                </div>


                                                <div class="btns">
                                                    <button type="submit" class="btn btn-save">Save</button>
                                                    <!-- <button type="submit" class="btn btn-delete">Delete</button> -->

                                                </div>
                                            </div>

                                        </div>

                                    </div>
                                </form>
                            </div>

                        </div>

                    </section>


                </div>

            </div>
        </main>




        <%- include('./partials/footer') %>




            <script src="https://code.jquery.com/jquery-3.5.1.min.js"
                integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

            <script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.4/min/tiny-slider.js"></script>

            <script src="/js/bootstrap.bundle.min.js"></script>

            <script src="/js/script.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

            <!-- <script src="https://unpkg.com/dropzone@5/dist/min/dropzone.min.js"></script> -->

            <script src="https://unpkg.com/filepond@^4/dist/filepond.js"></script>

            <script>
                document.querySelectorAll('aside a')
                    .forEach(e => e.addEventListener('click', _ => change(e.dataset.id)))


                function change(n) {
                    let panels = document.querySelectorAll('.busi')
                    panels.forEach(p => p.classList.remove('active'))
                    panels[n - 1].classList.add('active')
                }


                $('.seller-nav div').click(function () {
                    $(this).siblings('div').removeClass("active"); // remove active class from sibling anchors
                    $(this).toggleClass("active");
                })

            </script>

            <script>
                $(document).ready(function () {
                    $("#tooglenight").change(function () {
                        if (this.checked) {
                            $("#bd").addClass("night");
                            $(".content i").css("color", "#333");
                        } else {
                            $("#bd").removeClass("night");
                            $(".content i").css("color", "white");
                        }
                    });
                });
            </script>

            <script>
                window.APP_API_BACKEND_URL = "<%= apiUrl %>";
            </script>

            <script src="/client/admin/editTag.js"></script>

</body>

</html>